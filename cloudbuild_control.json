{
    "timeout": "5400s",
    "steps": [
        {
            "name": "gcr.io/cloud-builders/git",
            "args": [
                "clone",
                "--branch=${_DEPLOY_BRANCH_NAME}",
                "https://github.com/vwt-digital/repo-control.git"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gsutil",
            "args": [
                "cp",
                "gs://${PROJECT_ID}-dcat-deployed-stg/data_catalog.json",
                "."
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "entrypoint": "bash",
            "args": [
                "-c",
                "repo-control/scripts/run_control.sh data_catalog.json ${PROJECT_ID} ${_KEYRING_REGION} ${_KEYRING} ${_KEY} ${_ENCRYPTED_GITHUB_TOKEN}"
            ]
        }
    ],
    "substitutions": {
        "_DEPLOY_BRANCH_NAME": "__DEPLOY_BRANCH_NAME__",
        "_ENCRYPTED_GITHUB_TOKEN": "__ENCRYPTED_GITHUB_TOKEN__",
        "_KEYRING_REGION": "__KMS_KEYRING_REGION__",
        "_KEYRING": "__KMS_KEYRING__",
        "_KEY": "__KMS_KEY__"
    }
}
